<h1><%= @title %></h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th><%= User.human_attribute_name(:name) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th>
          <% if user.avatar.attached? %>
            <%= image_tag user.avatar.variant(resize_to_fill: [30, 30]) %>
          <% end %>
        </th>
        <td><%= user.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('views.common.back'), @user %>
